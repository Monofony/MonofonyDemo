{% extends '@SyliusUi/Layout/centered.html.twig' %}

{% block title %}Monofony | {{ 'sylius.ui.administration_panel_login'|trans }}{% endblock %}

{% block head %}
    {{ google_tag_manager_head() }}
    {{ parent() }}
{% endblock %}

{% block metatags %}
    <meta name="description" content="Découvrez le back office de démonstration Monofony, le strater de projet open-source. Connectez-vous en tant qu'administrateur !">
{% endblock %}

{% block stylesheets %}
    {% include '@SyliusUi/_stylesheets.html.twig' with {'path': 'assets/backend/app.css'} %}
{% endblock %}

{% block body %}
    {{ google_tag_manager_body() }}
    {{ parent() }}
    {{ google_tag_manager_body_end() }}
{% endblock body %}

{% block content %}
    {% include '@SyliusUi/Security/_login.html.twig' with {'action': path('sylius_backend_login_check'), 'paths': {'logo': 'assets/backend/img/logo.png'}} %}
{% endblock %}

{% block javascripts %}
    {% include '@SyliusUi/_javascripts.html.twig' with {'path': 'assets/backend/app.js'} %}
{% endblock %}
